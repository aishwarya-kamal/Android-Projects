<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    // Style for the 6 categories of the main vertical Linear layout
    <style name="GeneralCategoryStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:weightSum">6</item>

        <item name="android:orientation">horizontal</item>

    </style>

    // Style for the children views of the parent horizontal Linear layout for all the categories
    <style name="TextAndImageViewOfEachCategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">0dp</item>

        <item name="android:layout_weight">3.5</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>

    </style>


</resources>
